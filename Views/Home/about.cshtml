@{
    ViewData["Title"] = "Privacy Policy";
}

<div class="sp-liw__container">
    <div class="sp-liw__container-center">
        <span class="sp-liw__header-front">
            What's Saaya?
        </span>
    </div>
    <div class="sp-liw__content-exclaim">
        <p>
            Made with ❤️ by a solo developer.
            <br />
            Empower your music streaming experience, without interruptions.
            <br />
            You choose what you want to listen to.
        </p>
    </div>
</div>
<div class="sp-liw__container">
    <div class="sp-liw__container-center">
        <span class="sp-liw__header-front">
            Contribute
        </span>
    </div>
    <div class="sp-liw__content-exclaim">
        <p>
            If you are interested in seeing the project grow, consider contributing!
            <br />
            Below are some ways you can help:
        </p>
    </div>
</div>

<hr style="border: 1px solid transparent;" />

<div class="sp-liw__content-marquee">
    <ul class="sp-liw__marquee">
        <li class="sp-liw__marquee-item">
            <img class="sp-liw__marquee-image" src="https://github.githubassets.com/images/modules/logos_page/GitHub-Mark.png" alt="github" />
            <b>
                GitHub
            </b>
            <p style="font-size: 13px;">
                See an issue? Want to add a feature?
                <br />
                Create a pull request to contribute!
            </p>
            <a href="https://github.com/Saaya-App" target="_blank" class="saaya-header__button">GitHub ⟶</a>
        </li>
        <li class="sp-liw__marquee-item">
            <img class="sp-liw__marquee-image" style="border-radius: 0%; height:70px; width: 90px;" src="https://assets-global.website-files.com/6257adef93867e50d84d30e2/636e0a6a49cf127bf92de1e2_icon_clyde_blurple_RGB.png" alt="github" />
            <b>
                Discord
            </b>
            <p style="font-size: 13px;">
                Chat with the team, or just connect with other users!
            </p>
            <a href="https://discord.gg/Ky8AXeRgWt" target="_blank" class="saaya-header__button">Discord ⟶</a>
        </li>
    </ul>
</div>

<div class="sp-liw__container">
    <div class="sp-liw__container-center">
        <span class="sp-liw__header-front">
            Support ❤️
        </span>
    </div>
    <div class="sp-liw__content-exclaim">
        <p>
            If you want to support the project financially, consider donating!
            <br />
            Any amount is appreciated.
        </p>
    </div>
</div>

<hr style="border: 1px solid transparent;" />


<div class="sp-liw__content-marquee">
    <ul class="sp-liw__marquee">
        <li class="sp-liw__marquee-item">
            <img class="sp-liw__marquee-image" src="https://cdn-icons-png.flaticon.com/512/2504/2504802.png" alt="paypal" />
            <b>
                PayPal
            </b>
            <p style="font-size: 13px;">
                Head over to our PayPal!
            </p>
            <a href="https://paypal.me/aisyshk" target="_blank" class="saaya-header__button">Donate ⟶</a>
        </li>
    </ul>
</div>